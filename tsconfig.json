{
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "module": "es6",
    "target": "es2017",
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "src/loadTiledMap.ts"
  ]
}
